{
  "name": "kanbanforcopilot",
  "displayName": "Kanban for Copilot",
  "description": "Kanban board + JSON persistence + copy task as Markdown for Copilot.",
  "version": "0.1.1",
  "publisher": "hiroyuki-aratame",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/And165KMT/kanbanforCopilot.git"
  },
  "homepage": "https://github.com/And165KMT/kanbanforCopilot#readme",
  "bugs": {
    "url": "https://github.com/And165KMT/kanbanforCopilot/issues"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": ["Other"],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kanbanto",
          "title": "Task board",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "kanbanto": [
        {
          "id": "kanbanto.boardView",
          "name": "Task board",
          "type": "webview",
          "icon": "media/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "kanbanto.openBoard",
        "title": "Kanban: Open Task board"
      },
      {
        "command": "kanbanto.openBoardFloating",
        "title": "Kanban: Open Task board (Floating)"
      },
      {
        "command": "kanbanto.setupMcp",
        "title": "Kanban: Enable Copilot MCP Tools"
      }
    ],
    "configuration": {
      "title": "Kanbanto",
      "properties": {
        "kanbanto.workspacePath": {
          "type": "string",
          "default": "",
          "description": "Absolute folder path Kanbanto reads/writes. If empty, uses the currently opened workspace folder."
        },
        "kanbanto.boardFileRelativePath": {
          "type": "string",
          "default": ".kanbanto/tasks.json",
          "description": "Relative path to the board JSON under workspacePath. Default: .kanbanto/tasks.json"
        },
        "kanbanto.nodePath": {
          "type": "string",
          "default": "",
          "description": "Optional absolute path to Node.js used for the MCP server. If empty, Kanbanto tries VS Code's bundled Node, then system Node."
        },
        "kanbanto.mcpAutoPrompt": {
          "type": "boolean",
          "default": true,
          "description": "Prompt to configure `.vscode/mcp.json` for Copilot MCP tools when missing or broken."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build && npm run build:mcp",
    "build": "tsc -p tsconfig.json",
    "build:mcp": "npm --prefix mcp/kanbanto-mcp run build",
    "watch": "tsc -watch -p tsconfig.json"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0"
  }
}
